  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Assistant</name>
  <summary>AI-powered desktop assistant.</summary>
  <description>
    <p>A simple yet powerful AI-powered desktop assistant.</p>
    <p>Assistant lets you interact with your Linux desktop using natural language. Chat with the assistant, run system commands, open websites, show notifications, and more — all from a clean, native GTK 4 UI.</p>
  </description>

  <developer id="com.github.azibom">
    <name>azibom</name>
  </developer>

  <url type="homepage">https://github.com/azibom/assistant</url>
  <url type="vcs-browser">https://github.com/azibom/assistant</url>
  <url type="bugtracker">https://github.com/azibom/assistant/issues</url>
  <url type="help">https://github.com/azibom/assistant#readme</url>
  <url type="donation">https://github.com/azibom/assistant</url>
  <url type="contribute">https://github.com/azibom/assistant</url>

  <translation type="gettext">assistant</translation>
  <launchable type="desktop-id">com.azibom.assistant.desktop</launchable>

  <content_rating type="oars-1.1" />

  <branding>
    <color type="primary" scheme_preference="light">#05E190</color>
    <color type="primary" scheme_preference="dark">#024B30</color>
  </branding>

