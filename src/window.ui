<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="GnomeAiAssistantWindow" parent="GtkApplicationWindow">
    <property name="default-width">400</property>
    <property name="default-height">500</property>
    <property name="title">GNOME AI Assistant</property>
    <property name="icon-name">org.gnome.GnomeAiAssistant</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>

        <!-- Chat area -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="vexpand">True</property>
            <child>
              <object class="GtkTextView" id="chat_view">
                <property name="editable">False</property>
                <property name="wrap-mode">word</property>
                <property name="monospace">True</property>
                <property name="pixels-above-lines">4</property>
                <property name="pixels-below-lines">4</property>
                <property name="left-margin">8</property>
                <property name="right-margin">8</property>
              </object>
            </child>
          </object>
        </child>

        <!-- User input -->
        <child>
          <object class="GtkEntry" id="chat_entry">
            <property name="placeholder-text">Type your message...</property>
            <property name="height-request">40</property>
            <signal name="activate" handler="on_entry_activate"/>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>

