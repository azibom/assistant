{
  "id": "org.gnome.GnomeAiAssistant",
  "runtime": "org.gnome.Platform",
  "runtime-version": "47",
  "sdk": "org.gnome.Sdk",
  "command": "gnomeaiassistant",
  "finish-args": [
    "--talk-name=org.freedesktop.portal.Desktop",
    "--share=network",
    "--socket=system-bus",
    "--socket=session-bus",
    "--socket=wayland",
    "--socket=x11",
    "--device=dri",
    "--env=DISPLAY=:0",
    "--talk-name=org.freedesktop.login1",
    "--talk-name=org.freedesktop.DBus",
    "--filesystem=home"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "llama_cpp",
      "buildsystem": "simple",
      "build-commands": [
        "pip3 install --no-index --find-links=python_wheels llama-cpp-python --prefix=/app"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "./python_wheels",
          "dest": "python_wheels"
        }
      ]
    },
    {
      "name": "gnomeaiassistant",
      "builddir": true,
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "file:///home/azibom/Projects"
        }
      ]
    }
  ]
}
